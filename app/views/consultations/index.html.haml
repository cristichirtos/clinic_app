- provide(:title, 'Consultations')
%h1 Consultations

- if doctor?
  #notifications.hidden 

= will_paginate

.row
  .col-md-5.col-md-offset-3
    = link_to 'New consultation', new_consultation_path, class: 'btn btn-primary' if secretary?
    %ul.list-group
      - @consultations.each do |consultation|
        = link_to consultation, class: 'list-group-item list-group-item-action d-flex justify-content-between align-items-center' do 
          .flex-column
            Doctor: 
            = consultation.doctor.name
            %br
            Patient: 
            = consultation.patient.name 
            %br 
            Date and time: 
            = consultation.date_time

= will_paginate
